<h1>Books</h1>


<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Show", book %></td>
            <td><%= link_to "Edit", edit_book_path(book) %></td>
            <td><%= link_to "Destroy", book, method: :delete, data: { confirm: "Are you sure?" } %></td>
        </tr>
        <% end %>
    </tbody>
</table>


<h2>New book</h2>
<%= form_with model: @book,url:'/books',local:true do |f| %>

    <% if @book.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> errors prohibited this biik form begin saved:</h2>
          <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
    </div>
    <% end %>
    
    
    
    <div class="field">
        <% if @book.errors.any? %>
        <div class="field_with_errors">
        <% end %>
            <label for="book_title">Title</label>
        </div    
        
        <% if @book.errors.any? %>
        <div class="field_with_errors">
            <%= f.text_field:title %>
        </div>
        <% end %>
    </div>
        
        
        


    <div class="field">
        <% if @book.errors.any? %>
        <div class="field_with_errors">
        <% end %>
            <label for="book_body">Body</label>
        </div>
        
        <% if @book.errors.any? %>
        <div class="field_with_errors">
        <% end %>
            <%= f.text_area:body %>
        </div>
    </div>

    <div class="actions">
        <%= f.submit 'Create Book' %>
    </div>

    <% end %>





